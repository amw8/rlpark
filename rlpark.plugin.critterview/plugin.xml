<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            class="zephyr.plugin.critterview.views.ObservationView"
            icon="icons/view_observation.png"
            id="zephyr.plugin.critterview.view.observation"
            name="Critterbot"
            restorable="true">
      </view>
   </extension>
   <extension
         id="critterview.filehandler"
         point="zephyr.filehandler">
      <client
            class="zephyr.plugin.critterview.FileHandler">
      </client>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="zephyr.plugin.critterview.commands.StartSimulator"
            description="Start the Critterbot Simulator"
            id="zephyr.plugin.critterview.startsimulator"
            name="Start Simulator">
      </command>
      <command
            defaultHandler="zephyr.plugin.critterview.commands.ConnectCritterbot"
            description="Connect to the Critterbot"
            id="zephyr.plugin.critterview.connectcritterbot"
            name="Connect to Critterbot">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:menu.file?after=zephyr.plugin.core.zephyrbegin">
         <menu
               label="Critterbot">
            <command
                  commandId="zephyr.plugin.critterview.startsimulator"
                  label="Start a Simulator"
                  mnemonic="S"
                  style="push">
            </command>
            <command
                  commandId="zephyr.plugin.critterview.connectcritterbot"
                  label="Connect to Critterbot"
                  mnemonic="C"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="crittergui"
         point="org.eclipse.core.runtime.products">
      <product
            application="zephyr.application.application"
            name="Crittergui">
         <property
               name="windowImages"
               value="images/critterbot16.png,images/critterbot32.png,images/critterbot48.png,images/critterbot64.png,images/critterbot128.png">
         </property>
         <property
               name="aboutText"
               value="Critterbot GUI&#x0A;Thomas Degris, RLAI&#x0A;Computing Science&#x0A;University of Alberta">
         </property>
         <property
               name="aboutImage"
               value="images/critterbot128.png">
         </property>
         <property
               name="appName"
               value="Crittergui">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="zephyr.startup">
      <client
            class="zephyr.plugin.critterview.RegisterJarStartupJob">
      </client>
   </extension>
   <extension
         point="zephyr.runnable">
      <client
            autostart="false"
            class="zephyr.plugin.critterview.runnable.CritterbotRunnable"
            id="critterbot">
      </client>
      <client
            autostart="false"
            class="zephyr.plugin.critterview.runnable.SimulatorRunnable"
            id="simulator">
      </client>
   </extension>
   <extension
         point="zephyr.viewprovider">
      <client
            class="zephyr.plugin.critterview.views.ObservationView$Provider"
            icon="icons/view_observation.png"
            name="Critterbot View"
            popup="true"
            viewid="zephyr.plugin.critterview.view.observation">
      </client>
   </extension>
</plugin>
